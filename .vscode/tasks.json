{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
        },
        {
            "type": "shell",
            "command": "node-sass -w ./src/ -o ./dist/ --output-style compressed --error-bell",
            "label": "SCSS",
            "group": "build",
            "problemMatcher": []
        }
    ]
}